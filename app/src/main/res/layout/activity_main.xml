<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/image_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="QR Code" />

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/redAccent"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:onClick="regenerateQR"
            android:id="@+id/share_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:layout_marginHorizontal="10dp"
            android:checked="true"
            android:fontFamily="@font/noto_sans"
            android:text="Share Email"
            android:textColor="@color/black" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/redAccent"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:onClick="regenerateQR"
            android:id="@+id/share_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/noto_sans"
            android:text="Share Notes"
            android:textColor="@color/black" />
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/redAccent"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:onClick="regenerateQR"
                android:id="@+id/share_s_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="Share Secondary Number"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/redAccent"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:onClick="regenerateQR"
                android:id="@+id/share_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="Share Job Title"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/redAccent"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:onClick="regenerateQR"
                android:id="@+id/share_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="Share Postal"
                android:textColor="@color/black"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>